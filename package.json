{
	"name": "klaus-ai",
	"displayName": "Klaus",
	"description": "Klaus from Maepl Labs - AI agentic coding assistant that works with Anthropic, OpenAI, Azure and Ollama",
	"version": "1.5.3",
	"publisher": "MaeplLabs",
	"license": "MIT",
	"workspaces": [
		"shared",
		"views-ui"
	],
	"authors": [
		{
			"name": "Dosumu Andrew",
			"email": "Andrewdosumu0@gmail.com"
		}
	],
	"icon": "media/icon.png",
	"galleryBanner": {
		"color": "#262626",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cyber-turtle/Klaus-AI-VsCode-Extension"
	},
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Machine Learning",
		"Education",
		"AI",
		"Chat"
	],
	"pricing": "Free",
	"keywords": [
		"ai",
		"codestral",
		"chatgpt",
		"copilot",
		"compose",
		"sonnet",
		"intellisense",
		"openai",
		"anthropic",
		"composer",
		"gpt",
		"chat",
		"ollama",
		"huggingface",
		"code assistant"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"properties": {
				"klaus-ai.workspace.trust": {
					"type": "boolean",
					"default": true,
					"description": "Trust workspace for file system operations"
				}
			}
		},
		"icons": {
			"klaus-logo": {
				"description": "Klaus icon",
				"default": {
					"fontPath": "media/klaus.woff",
					"fontCharacter": "\\e900"
				}
			}
		},
		"languages": [
			{
				"id": "plaintext",
				"aliases": [
					"Plain Text",
					"plaintext"
				],
				"extensions": [
					".txt",
					".text"
				]
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "klaus",
					"title": "Klaus",
					"icon": "media/klaus_logo.png"
				}
			],
			"panel": [
				{
					"id": "klaus-config",
					"title": "Klaus",
					"icon": "media/klaus_logo.png"
				}
			]
		},
		"views": {
			"klaus": [
				{
					"id": "klaus.chatview",
					"name": "Klaus has your back!",
					"type": "webview",
					"icon": "media/klaus_logo.png"
				}
			],
			"klaus-config": [
				{
					"id": "klaus.configview",
					"name": "Klaus",
					"type": "webview",
					"icon": "media/klaus_logo.png"
				}
			]
		},
		"commands": [
			{
				"command": "klausai.gendocument",
				"title": "Klaus: Gen Docs"
			},
			{
				"command": "klausai.refactorcode",
				"title": "Klaus: Refactor Code"
			},
			{
				"command": "klausai.triggercodecomplete",
				"title": "Klaus: Code Complete"
			},
			{
				"command": "klausai.opencomposer",
				"title": "Klaus: Composer"
			},
			{
				"command": "klausai.openconfig",
				"title": "Klaus: Settings"
			}
		],
		"keybindings": [
			{
				"command": "klausai.triggercodecomplete",
				"key": "ctrl+shift+space"
			},
			{
				"command": "klausai.opencomposer",
				"key": "ctrl+i",
				"mac": "cmd+i"
			}
		]
	},
	"scripts": {
		"start:views": "cd views-ui && npm run dev",
		"build": "rsbuild build",
		"build:views": "cd views-ui && npm run build",
		"build:shared": "cd shared && npm run build",
		"vscode:prepublish": "npm run compile",
		"compile": "npm run clean && npm run build && npm run build:shared && npm run build:views && node ./scripts/removeBindings.js",
		"watch": "tsc -b --watch",
		"watch:views": "npm run clean && npm run build:views && npm run build",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"clean": "rimraf out",
		"test": "vitest"
	},
	"overrides": {
		"@langchain/community": {
			"@lancedb/lancedb": "0.18.2"
		}
	},
	"dependencies": {
		"@ast-grep/napi": "0.36.1",
		"@google/genai": "0.15.0",
		"@huggingface/inference": "2.6.4",
		"@lancedb/lancedb": "0.18.2",
		"@langchain/anthropic": "0.3.20",
		"@langchain/community": "0.3.43",
		"@langchain/core": "0.3.56",
		"@langchain/google-genai": "0.2.9",
		"@langchain/langgraph": "0.2.72",
		"@langchain/mcp-adapters": "0.4.5",
		"@langchain/ollama": "0.2.0",
		"@langchain/openai": "0.5.10",
		"@langchain/xai": "0.0.2",
		"@modelcontextprotocol/sdk": "^1.11.4",
		"@vscode/extension-telemetry": "^0.9.8",
		"apache-arrow": "18.1.0",
		"cheerio": "1.0.0",
		"detect-libc": "2.0.3",
		"duck-duck-scrape": "2.2.7",
		"event-source-polyfill": "1.0.31",
		"eventsource": "3.0.5",
		"extended-eventsource": "2.1.0",
		"ignore": "5.2.0",
		"json5": "2.2.3",
		"langchain": "0.3.26",
		"minimatch": "10.0.1",
		"node-cache": "^5.1.2",
		"node-fetch": "3.3.2",
		"puppeteer-chromium-resolver": "^23.0.0",
		"sound-play": "1.1.0",
		"tar": "7.4.3",
		"tinyglobby": "0.2.10",
		"tree-sitter": "0.22.4",
		"turndown": "7.2.0",
		"vscode-languageclient": "9.0.1",
		"vscode-languageserver": "9.0.1",
		"vscode-languageserver-textdocument": "1.0.12",
		"vscode-uri": "3.0.8",
		"zod": "3.24.1",
		"zod-to-json-schema": "3.24.1"
	},
	"devDependencies": {
		"@ast-grep/cli": "0.36.1",
		"@biomejs/biome": "1.9.4",
		"@rsbuild/core": "1.1.13",
		"@rsbuild/plugin-react": "1.1.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/event-source-polyfill": "1.0.5",
		"@types/mocha": "10.0.8",
		"@types/node": "22.5.5",
		"@types/sound-play": "^1.1.3",
		"@types/turndown": "5.0.5",
		"@types/vscode": "1.95.0",
		"@types/vscode-webview": "1.57.5",
		"@vitest/ui": "^2.1.8",
		"@vscode/test-cli": "0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"adm-zip": "0.5.16",
		"generate-license-file": "3.5.1",
		"node-fetch": "3.3.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.2",
		"vite-plugin-node-polyfills": "^0.22.0",
		"vitest": "^2.1.8"
	},
	"packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a"
}
